{
  "info": {
    "name": "Email OTP Authentication API",
    "description": "API collection for testing Email OTP Sign Up and Sign In",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Send OTP (Sign Up)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"your-email@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/send-otp",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "send-otp"]
        },
        "description": "Send OTP code to user's email address. This is the first step (Sign Up)."
      },
      "response": []
    },
    {
      "name": "2. Verify OTP (Sign In)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"your-email@example.com\",\n  \"otp\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/verify-otp",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "verify-otp"]
        },
        "description": "Verify OTP code and sign in. Returns JWT token and user data. User is stored/updated in Firestore."
      },
      "response": []
    },
    {
      "name": "3. Sign Out",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}",
            "description": "JWT token from verify-otp response"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/sign-out",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "sign-out"]
        },
        "description": "Sign out the current user. Requires JWT token in Authorization header."
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string",
      "description": "JWT token from verify-otp response"
    }
  ]
}
